{% include "data/COshielding_11.2bH2_5e20nH.dat.j2" %}
{% endif %}

{% if physics.n2shielding == "L13Table" %}
{% include "data/N2shielding_11.2bH2_1e20nH.dat.j2" %}
{% endif %}

{% endwith %}
